<% if (recipe!= null) { %>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page"><%= recipe.name %></li>
  </ol>
</nav>

<div class="row">

  <div class="col-12 col-md-4">
    <img src="/img/<%= recipe.image %>" class="img-fluid sticky-top"></img>
  </div>

  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12">
        <h1><%= recipe.name %></h1>
        <span class="col-12 mb-4"><i class="bi bi-tag"></i><%= recipe.category %>
        </span>
      </div>
    </div>

    <div style="white-space: pre-line;">
      <h2 class="mb-0">Ingredients</h2>
      <ul class="list-group list-group-flush">
        <% recipe.ingredients.forEach(line => { %>
        <li class="list-group-item"><%= line %></li>
        <%  }) %>
      </ul>
    </div>

    <div style="white-space: pre-line;">
      <h2 class="mb-0">Instructions</h2>
      <%= recipe.description %>
    </div>
  </div>
</div>




<% } else { %>
<h1>Oops!</h1>
<h2>It looks like something went wrong.</h2>
<p>The requested recipe was not found in our database. Sorry!</p>

<% } %>